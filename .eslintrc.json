{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
      "modules": true
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "rules": {
        "indent": [
            2,
            2,
            {"VariableDeclarator": { "var": 2, "let": 2, "const": 3}}
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    }
}
